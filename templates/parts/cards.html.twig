<li class="col-span-1 divide-y divide-gray-200 rounded-lg bg-white shadow-sm">
	<div class="flex w-full items-center justify-between space-x-6 p-6">
		<div class="flex-1 truncate">
			<div class="flex items-center space-x-3">
				<h3 class="truncate text-sm font-medium text-gray-900">{{ toolbox.title }}</h3>
				{% if toolbox.status.value == 'active' %}
					<span class="inline-flex shrink-0 items-center rounded-full bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-green-600/20 ring-inset">Active</span>
				{% elseif toolbox.status.value == 'inactive' %}
					<span class="inline-flex shrink-0 items-center rounded-full bg-red-50 px-1.5 py-0.5 text-xs font-medium text-red-700 ring-1 ring-red-600/20 ring-inset">Inactive</span>
				{% elseif toolbox.status.value == 'archived' %}
					<span class="inline-flex shrink-0 items-center rounded-full bg-gray-50 px-1.5 py-0.5 text-xs font-medium text-gray-700 ring-1 ring-gray-600/20 ring-inset">Archived</span>
				{% elseif toolbox.status.value == 'maintenance' %}
					<span class="inline-flex shrink-0 items-center rounded-full bg-yellow-50 px-1.5 py-0.5 text-xs font-medium text-yellow-700 ring-1 ring-yellow-600/20 ring-inset">Maintenance</span>
				{% else %}
					<span class="inline-flex shrink-0 items-center rounded-full bg-gray-50 px-1.5 py-0.5 text-xs font-medium text-gray-700 ring-1 ring-gray-600/20 ring-inset">Unknown</span>
				{% endif %}
			</div>
			<p class="mt-1 truncate text-sm text-gray-500">{{ toolbox.description }}</p>
		</div>
		<img class="size-10 shrink-0 rounded-full bg-gray-300" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=4&w=256&h=256&q=60" alt="">
	</div>
	<div>

<div class="-mt-px flex divide-x divide-gray-200 transition-all duration-200
    {% if toolbox.status.value in ['inactive', 'archived', 'maintenance'] %}
        bg-gray-100 cursor-not-allowed
    {% else %}
        hover:bg-blue-50
    {% endif %}
">
    <div class="flex w-0 flex-1">
        <a href="#"
           class="group relative -mr-px inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-bl-lg border border-transparent py-4 text-sm font-semibold transition-all duration-200
           {% if toolbox.status.value in ['inactive', 'archived', 'maintenance'] %}
               text-gray-400 pointer-events-none
           {% else %}
               text-gray-900 hover:text-blue-600
           {% endif %}"
           {% if toolbox.status.value in ['inactive', 'archived', 'maintenance'] %}disabled{% endif %}
        >
            <svg class="size-5
                {% if toolbox.status.value in ['inactive', 'archived', 'maintenance'] %}
                    text-gray-300
                {% else %}
                    text-gray-400 group-hover:scale-110 transition-transform duration-200
                {% endif %}"
                 viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
                <path d="M14 2c-2.7 0-5.2 1-7.1 2.9l-.3.3L5 9l-2 2 3 1-2 2 4 1 1 4 2-2 1 3 2-2.8.3-.3C21.9 13.2 21.2 2.7 14 2Zm0 2c5.5 0 6.7 7.1-.7 12.6l-.3.3-.8-2.2-2.5 2.5-.7-2.8-2.8-.7 2.5-2.5-2.2-.8.3-.3C6.9 6.7 14 5.5 14 5.5V4ZM8.5 20a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z"/>
            </svg>
            <span class="{% if toolbox.status.value in ['inactive', 'archived', 'maintenance'] %}
                            text-gray-400
                         {% else %}
                            group-hover:scale-105 transition-all duration-200
                         {% endif %}">
                Launch
            </span>
        </a>
    </div>
</div>
	</div>
</li>
